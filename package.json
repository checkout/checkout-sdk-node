{
  "name": "checkout-sdk-node",
  "version": "3.0.0",
  "description": "Checkout NodeJS SDK API",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "nodemon --exec babel-node ./src/index.js",
    "lint": "eslint --fix --ext .js src/",
    "test": "nyc --reporter=html mocha --timeout 300000 'test/**/*.js'",
    "posttest": "nyc report --reporter=json",
    "test:watch": "mocha --timeout 300000  'test/**/*.js' --watch",
    "build": "babel src --out-dir ./dist --source-maps"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "form-data": "^4.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@types/mocha": "^10.0.10",
    "chai": "^6.0.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "mocha": "^11.7.2",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "uuid": "^13.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 18
          }
        }
      ]
    ]
  },
  "author": "Ioan Ghisoi",
  "license": "MIT"
}
